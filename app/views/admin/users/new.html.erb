<h4>Новый пользователь</h4>

<%= form_for @user , url:admin_users_path do |f|  %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :email , "Email"%>
    <%= f.text_field :email , class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password , "Пароль"%>
    <%= f.text_field :password , class:"form-control" %>
  </div>
  <div class="form-check">
    <label class="form-check-label" for="user_role_true">
    <input type="radio" name="user[role]" id="user_role_true" class="form-check-input" <% if @user.role == "admin" %> checked <% end %> value="admin">admin
    </label>
  </div>
  <div class="form-check">
    <label class="form-check-label" for="user_role_false">
    <input type="radio" name="user[role]"  id="user_role_false" class="form-check-input" <% if @user.role == "user" %> checked <% end %> value="user">user
    </label>
  </div>  
  <%= f.submit %>
<% end %>