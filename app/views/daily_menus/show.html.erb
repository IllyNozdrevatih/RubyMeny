<% @daily_menu.daily_menus_dishes.select(:category).each do |relation| %>
  <h3><%= relation.category %></h3>
  <% @daily_menu.dishes.each do |dish| %>
    <% if relation.category === dish.category.name %>
      <ul class="category-list">
        <li>
          <%= dish.name %>
          <% if dish.units == true %>
            (порция)
          <% end %> 
          - 
          <%= dish.weight %>
          <%= dish.measure %>/<%= dish.last_price(dish , @daily_menu ) %>грн
        </li>
      </ul>
    <% end %>
  <% end %>
<% end %>
<%= link_to 'Назад' , daily_menus_path %>
