<%= form_for @dish , url:dish_path do |f|  %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name , class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :weight %>
    <%= f.text_field :weight, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :measure %>
    <%= f.text_field :measure, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class:"form-control" %>
  </div>
  <div class="h5">Категория:</div>
  <%= collection_radio_buttons(:dish , :category_id , Category.all ,:id, :name) do |cat|%>
    <div><%= cat.label {cat.radio_button + cat.text} %></div>
  <% end %>
  <div class="form-group">
    <div>Порция</div>
    <input type="radio" name="dish[units]" <% if @dish.units == true %> checked <% end %> value="1">Да
    <input type="radio" name="dish[units]" <% if @dish.units == false %> checked <% end %> value="0">Нет
  </div>
  <%= f.submit %>
<% end %>