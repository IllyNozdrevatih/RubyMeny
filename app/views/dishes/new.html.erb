<%= form_for @dish , url: dishes_path do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :measure %>
  <%= f.text_field :measure %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :weight %>
  <%= f.text_field :weight %>
  <%= collection_radio_buttons(:category , :category_id , Category.all ,:id, :name) do |cat|%>
    <%= cat.label {cat.radio_button + cat.text} %>
  <% end %>
  <%= f.submit %>
<% end %>
